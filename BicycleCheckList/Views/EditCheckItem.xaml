<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BicycleCheckList.Views.EditCheckItem"
             Title="EditCheckItem">
    <Grid ColumnDefinitions="Auto,*"
          ColumnSpacing="{StaticResource StdSpacing}"
          RowSpacing="{StaticResource StdSpacing}"
          Margin="{StaticResource StdMargin}">
        <Label 
            Text="Item"
            VerticalOptions="Center"/>
        <Entry Grid.Column="1" Text=""/>
        <Label Grid.Row="1"
            Text="Amount"
            VerticalOptions="Center"/>
        <Entry Grid.Row="1" Grid.Column="2" Text=""/>
        <Button Grid.ColumnSpan="2" Grid.Row="2"
                Text="OK"/>
    </Grid>
</ContentPage>