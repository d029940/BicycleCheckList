<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BicycleCheckList.Views.TourListPage"
             xmlns:viewmodel="clr-namespace:BicycleCheckList.ViewModels"
             xmlns:model="clr-namespace:BicycleCheckList.Models"
             x:DataType="viewmodel:TourListViewModel"
   Title="{Binding Title}">
    <Grid  Margin="{StaticResource StdMargin}"
           ColumnDefinitions="*,*"
           RowDefinitions="*,Auto"
           RowSpacing="{StaticResource StdMargin}"
           ColumnSpacing="{StaticResource StdMargin}">
        <CollectionView ItemsSource="{Binding Tours.AllTours}"
                        Grid.ColumnSpan="2"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedTour}"
                        >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Tour" >
                    <Label Text="{Binding Name}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="1"
             
                Text="Add"/>
        <Button Grid.Row="1"
                Grid.Column="1"
              
            Text="Save"></Button>
    </Grid>
</ContentPage>